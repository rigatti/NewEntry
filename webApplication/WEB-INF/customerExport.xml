<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.springframework.org/schema/webflow
                          http://www.springframework.org/schema/webflow/spring-webflow-1.0.xsd">

	<start-state idref="getParamsAct"/>

	<action-state id="getParamsAct">
		<action bean="requestParamsFormAction" method="bindAndValidate"/>
		<transition to="exportAct" />
	</action-state>

	<action-state id="exportAct">
		<bean-action bean="exportBusiness" method="customerExport">
			<method-arguments>
				<argument expression="flowScope.export"/>
				<argument expression="flowScope.requestParams.custCode"/>
				<argument expression="flowScope.requestParams.custEmail"/>
				<argument expression="flowScope.requestParams.custNewEmail"/>
			</method-arguments>
			<method-result name="export" scope="flow"/>
		</bean-action>
		<transition to="confirmView"></transition>
	</action-state>
		
	<end-state id="confirmView" view="customersExport/confirm">
	</end-state>
</flow>