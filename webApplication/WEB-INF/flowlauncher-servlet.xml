	<!-- Launches new flow executions and resumes existing executions. -->
	<!-- repository-type="continuation" -->
	<flow:executor id="flowExecutor" registry-ref="flowRegistry" />

	<!-- Creates the registry of flow definitions for this application -->
	<flow:registry id="flowRegistry">
		<flow:location path="/WEB-INF/productEntry.xml" />
		<flow:location path="/WEB-INF/productAdmin.xml" />
		<flow:location path="/WEB-INF/productTraceability.xml" />
		<flow:location path="/WEB-INF/entryTraceability.xml" />
		<flow:location path="/WEB-INF/productAllocation.xml" />
		<!-- flow:location path="/WEB-INF/messaging.xml"/ -->
		<flow:location path="/WEB-INF/productCleaning.xml" />
		<flow:location path="/WEB-INF/productsExport.xml" />
		<flow:location path="/WEB-INF/customersExport.xml" />
		<flow:location path="/WEB-INF/productExport.xml" />
		<flow:location path="/WEB-INF/customerExport.xml" />
	</flow:registry>

	<bean name="/flowController.htm"
		class="org.springframework.webflow.executor.mvc.FlowController">
		<property name="flowExecutor" ref="flowExecutor"></property>
	</bean>

	<bean id="viewResolver"
