<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.springframework.org/schema/webflow
                          http://www.springframework.org/schema/webflow/spring-webflow-1.0.xsd">

	<start-state idref="cleaningAct"/>

	<action-state id="cleaningAct">
		<bean-action bean="cleaningBusiness" method="cleanDb">
			<method-arguments>
				<argument expression="flowScope.cleaning"/>
			</method-arguments>
			<method-result name="cleaning" scope="flow"/>
		</bean-action>
		<transition to="confirmView"></transition>
	</action-state>
	
	<end-state id="confirmView" view="productCleaning/main">
	</end-state>
</flow>